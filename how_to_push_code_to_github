#how to link library with excutable
#Ans

add_library(
    car_collision   #SHARED   STATIC   MODULE   types of library
    src/car_collision.cpp
    src/car_collision.h
)
add_executable(CarCollisions 
               main.cpp)

target_link_libraries(CarCollisions    PRIVATE   car_collision)
#                     executablename              libraryname




-------------------------------------------------------------------------------------------------------------





# To Use CImg Library we have to add these two library in cmakelist.txt file(X11  pthread)
e.g
target_link_libraries(DataVisualizer     PRIVATE   data_visualizer  X11  pthread)

and with gcc compiler like that
1.g++ main.cpp -o program -lX11
2.g++ main.cpp -o program -pthread



